{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"paths": {
			"app": ["./src/app"],
			"app/*": ["./src/app/*"],
			"pages": ["./src/pages"],
			"pages/*": ["./src/pages/*"],
			"widgets": ["./src/widgets"],
			"widgets/*": ["./src/widgets/*"],
			"features": ["./src/features"],
			"features/*": ["./src/features/*"],
			"entities": ["./src/entities"],
			"entities/*": ["./src/entities/*"],
			"shared": ["./src/shared"],
			"shared/*": ["./src/shared/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
